<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.karol.fitnesstracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="activities.FitnessTracker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="activities.Register">
            <intent-filter>
                <action android:name="android.intent.action.REGISTER" />
            </intent-filter>
        </activity>
        <activity android:name="activities.Login">
            <intent-filter>
                <action android:name="android.intent.action.LOGIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="activities.MainScreenTabManager"
            android:label="@string/title_activity_main_tabs"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="activities.CreateWorkoutPlan"
            android:label="CreateWorkout"
            android:theme="@style/AppTheme.CreateWorkout"/>
    </application>

</manifest>